<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :item_name %><br />
    <%= f.text_field :item_name %>
  </p>
  <p>
    <%= f.label :item_description %><br />
    <%= f.text_area :item_description %>
  </p>
  <p>
    <%= f.label :sale_status %><br />
    <%= f.text_field :sale_status %>
  </p>
  <p>
    <%= f.label :item_list %><br />
    <%= f.text_field :item_list %>
  </p>
  <p>
    <%= f.label :item_choice %><br />
    <%= f.check_box :item_choice %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>