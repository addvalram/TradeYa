<h1>Editing item</h1>

<% form_for(@item, :url=> user_item_path(current_user,@item) ,:method=> :put) do |f| %>
  <%= f.error_messages %>

  <p>
  	<%= f.file_field :photo%>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :item_name %><br />
    <%= f.text_field :item_name %>
  </p>
  <p>
    <%= f.label :item_description %><br />
    <%= f.text_area :item_description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', user_items_path(current_user) %> |
<%= link_to 'Back', user_items_path(current_user) %>